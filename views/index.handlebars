


    <div class="container">
        {{#each article}}
            <div class="card">
                <h3 class="card-header">{{this.title}}</h3>
                <div class="row">
                    <div class="col-lg-8 card-block">
                        <a href="https://www.nytimes.com{{this.link}}" target="_blank" class="card-link">Read More</a>
                    </div>
                    <div class="col-lg-4 align-self-end text-right">
                        {{#if saved}}
                            <button class="btn btn-secondary m-2 disabled">Article Saved</button>
                        {{else}}
                            <button class="btn btn-success m-2 btn-save" data-id="{{this._id}}">Save Article</button>
                        {{/if}}
                    </div>
                </div>
            </div>
            
        {{/each}}
        
        
    </div>